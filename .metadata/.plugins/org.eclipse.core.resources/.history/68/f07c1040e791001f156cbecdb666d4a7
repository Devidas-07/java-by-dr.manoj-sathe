package com.questions;

public class Literals {

	public static void main(String[] args) {
		//**Decimal Literals**
		int a= 6; //output will be 6 
		System.out.println("a is "+a);
		
		//*Octal Literals*
		int b = 060; //output will be 48
		System.out.println("b is "+b);
		
		//*Hexadecimal Literals*
		int c = 0x45b; //output will be 69
		System.out.println("c is "+c);
		
		//*Floating point Literals*
		//float f = 123.456; this will not compile you have to mention f or F explicitly
		float f = 123.456f;
		
		double d1 = 123.456789; // here we do not need to mention d or D but you can mention then also our program works
		
		double d2 = 0123.456;
		System.out.println("d2 is "+d2);// even though we add 0 it this double value will not convert into octol
										// float and double value does not convert into octoal, hexadecimal
		//double d3 = 0x123.456; this will not compile
		
		double d4 = 10;
		//double d5 = 0786; it will not compile
		double d6= 0xface; 
		System.out.println("d6 is "+d6);
		
		int g = 0b11011;
		System.out.println("g is "+g);
		
	}

}
